@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<h3>Cart Page</h3>
<h4>Total quantity: @ViewBag.Quantity</h4>

<table cellpadding="2" cellspacing="2" border="1">
    <tr>
        @*<th>Option</th>*@
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            @*<td><a asp-controller="product" asp-action="remove" asp-route-id="@item.Product.Id">Remove</a></td>*@
            <td>@item.product.Id</td>
            <td>@item.product.Name</td>
            <td><img src="img/@(item.product.Name).jpg" style="height: 50%; width: 50%; align-self: center; padding-top: 10px">
            <td id="prize">@item.product.DefaultPrice</td>
            <td><label for="inputq">Quantity:</label>
                <input  id="inputq" type="text" value="@item.Quantity"/>
            </td>
            <td id="subtotal">
                <script>
                    document.getElementById("inputq").addEventListener("change", (event) =>
                    {
                        var quantity = document.getElementById("inputq").value;
                        var prize = document.getElementById("prize").innerText;
                        console.log(quantity);
                        console.log(prize);
                        //var quantity = querySelector("#i").val();
                        //var prize = querySelector("#prize").val();
                        var intquant = parseInt(quantity);
                        var intprize = parseInt(prize);
                        var total = intprize * intquant;
                        //var child = document.createElement('div');
                        var stringtotal = total.toString();
                        //child.innerHTML = stringtotal;
                        document.getElementById("subtotal").innerText = stringtotal;
                        console.log(total);
                    })
                </script>
                @(item.product.DefaultPrice * item.Quantity)
            </td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Sum</td>
        <td>
            @ViewBag.total
        </td>
    </tr>
</table>
<br>
<a asp-controller="product" asp-action="index">Continue Shopping</a>

</body>
</html>